<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity" android:id="@+id/displayText">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/enterDOB"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:hint="Enter Year of Birth" android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/calcButton"
    />
    <Button
            android:text="Tabulate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calcButton" android:textColor="@color/colorAccent"
            android:background="@color/colorPrimaryDark" style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="72dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="309dp"
            android:layout_height="68dp"
            android:id="@+id/textOne"
            android:textSize="24sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/enterName" app:layout_constraintVertical_bias="0.077"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/enterName" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/enterDOB" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:hint="Enter Name"/>


</androidx.constraintlayout.widget.ConstraintLayout>